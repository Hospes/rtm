<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="horizontal"
              android:paddingBottom="8dp"
              android:paddingStart="8dp"
              android:paddingTop="8dp">

    <TextView android:id="@+id/tv_team"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_margin="4dp"
              android:layout_weight="1"
              android:singleLine="true"
              android:text="4 - Fortune"
              android:textSize="24sp" />

    <LinearLayout android:id="@+id/container_pits"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:minWidth="80dp"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:text="PIT"
                  android:textAllCaps="true"
                  android:textSize="18sp" />

        <TextView android:id="@+id/tv_pits"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="4dp"
                  android:layout_marginRight="4dp"
                  android:gravity="center_vertical"
                  android:singleLine="true"
                  android:text="2"
                  android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:minWidth="100dp">

        <Button android:id="@+id/btn_session_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/btn_set_car"
                android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:minWidth="200dp">

        <Button android:id="@+id/btn_session_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/btn_set_driver" />

    </FrameLayout>

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:minWidth="100dp">

        <ua.hospes.rtm.ui.race.widgets.DriverTimeView
            android:id="@+id/tv_driver_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="00:00:00" />
    </FrameLayout>

    <Button android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="NEXT"
            android:visibility="gone" />

    <ua.hospes.rtm.ui.race.widgets.CustomToggleButton
        android:id="@+id/btn_pit_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textOff="PIT"
        android:textOn="OUT" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:minWidth="100dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/tv_session_type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:text="ON TRACK"
                  android:textAllCaps="true"
                  android:textSize="18sp" />

        <ua.hospes.rtm.ui.race.widgets.SessionTimeView
            android:id="@+id/tv_session_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00" />
    </LinearLayout>
</LinearLayout>